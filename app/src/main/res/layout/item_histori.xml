<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="4dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/line"
            android:padding="10dp"
            android:background="@color/softLumut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txt_tinggi"
                android:text="Tinggi : "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/Tgl"
                android:text="YYYY/MM/DD"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:visibility="gone"
                android:background="@drawable/button2"
                android:text="NORMAL"
                android:id="@+id/normal"
                android:layout_below="@+id/Tgl"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/green"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
        <Button
                android:visibility="gone"
                android:background="@drawable/button1"
                android:text="KURANG"
                android:id="@+id/kurang"
                android:layout_below="@+id/Tgl"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/abuabu"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
        <Button
                android:visibility="gone"
                android:background="@drawable/button3"
                android:text="BERLEBIH"
                android:id="@+id/berlebih"
                android:layout_below="@+id/Tgl"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/orange"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
        <Button
                android:visibility="gone"
                android:background="@drawable/button4"
                android:text="OBESITAS"
                android:id="@+id/obesitas"
                android:layout_below="@+id/Tgl"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/maroon"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
        <TextView
                android:layout_marginTop="15dp"
                android:text="0"
                android:id="@+id/Tinggi"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"/>
        <TextView
                android:layout_marginTop="15dp"
                android:text="cm"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="100dp"/>
        <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Berat : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_below="@+id/txt_tinggi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="0"
                android:id="@+id/Berat"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_below="@+id/Tinggi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"/>
        <TextView
                android:text="Kg"
                android:textColor="@color/white"
                android:layout_below="@+id/Tinggi"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="100dp"/>

